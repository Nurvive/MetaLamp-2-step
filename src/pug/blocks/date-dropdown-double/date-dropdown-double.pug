include ../text-field/text-field

mixin date-dropdown-double({title1 = '', title2 = '', placeholder = ''} = {})
    .date-dropdown-double
        .date-dropdown-double__input.js-date-dropdown-double__input
            p.date-dropdown-double__input-title= title1
            +text-field({withDropdown: true, placeholder: placeholder})
            span.date-dropdown-double__input-open-button
        .date-dropdown-double__input.js-date-dropdown-double__input
            p.date-dropdown-double__input-title= title2
            +text-field({withDropdown: true, placeholder: placeholder, isReadonly: true})
            span.date-dropdown-double__input-open-button

