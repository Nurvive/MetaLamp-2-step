include ../buttons/button
mixin login
    .card.login&attributes(attributes)
        .login__title
            p.login__title-text Войти
        .login__inputs
            include ../text-field/text-field
            +text-field(placeholder='Email' class='login__input')
            +text-field(placeholder='Пароль' class='login__input')
        .login__button
            +button({text: 'Войти', size: 'long', arrow: true})
        .login__bottom
            p.login__bottom-text Нет аккаунта на Toxin?
            +button({text: 'Создать', size: 'default', type: 'transparent'})

