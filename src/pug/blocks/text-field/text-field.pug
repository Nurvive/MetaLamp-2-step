mixin text-field({withPadding = false, withDropdown = false} = {})
    -
        const paddingClass = withPadding ? 'text-field_with-padding' : ''
        const dropdownClass = withDropdown ? 'text-field_with-dropdown' : ''
    input.text-field(placeholder='Email' type='text' class=paddingClass class=dropdownClass)&attributes(attributes)
