include ../rate-button/rate-button

mixin room-card({images = [], number = '1337', type = '', cost = '666₽', rating = 0, reviews = 0, uniqueID = ''} = {})
    .room-card
        .room-card__top.js-room-card__top
            each src in images
                img(class='room-card__top-img' src=src)
        .room-card__content
            ul.room-card__list
                li.room-card__item
                    .room-card__number
                        strong=number
                        if type
                            span.room-card__type=type
                    .room-card__price
                        strong=cost
                        span  в сутки
                li.room-card__item
                    +rate-button(rating, uniqueID)
                    .room-card__reviews
                        strong.room-card__reviews-text=reviews
                        span  отзывов
