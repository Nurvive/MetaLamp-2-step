include ../buttons/button
include ../masked-text-field/masked-text-field

mixin registration
    .registration.card&attributes(attributes)
        include ../text-field/text-field
        .registration__layout
            p.registration__layout-text.registration__layout-text_big Регистрация аккаунта
            +text-field(placeholder='Имя' class='registration__input')
            +text-field(placeholder='Фамилия' class='registration__input')
            include ../radio-buttons/radio-buttons
        .registration__layout
            p.registration__layout-text дата рождения
            +masked-text-field
        .registration__layout
            p.registration__layout-text данные для входа в сервис
            +text-field(placeholder='Email' class='registration__input')
            +text-field(placeholder='Пароль' class='registration__input')
            include ../toggle/toggle-kit/toggle-mixin
            -var obj = ['Получать спецпредложения']
            +toggle-buttons(obj)
        +button({text: 'Зарегистрироваться', size: 'long', arrow: true})
        .registration__bottom
            p.registration__bottom-text Уже есть аккаунт на Toxin
            +button({text: 'Войти', size: 'default', type: 'transparent'})

