extends ../../templates/template
include ../../blocks/find-room/find-room
include ../../blocks/calendar/calendar

block title
    title cards

block content
    .wrapper
        .container.cards__container
            div.cards__item
                -
                    var obj = [
                        {
                            title: 'Прибытие',
                            class: 'js-cards__date-dropdown_start',
                            placeholder: 'ДД.ММ.ГГГГ'
                        },
                        {
                            title: 'Выезд',
                            class: 'js-cards__date-dropdown_end',
                            placeholder: 'ДД.ММ.ГГГГ'
                        }
                    ]
                +find-room(obj)
            div.cards__item
                include ../../blocks/registration/registration
            div.cards__item
                include ../../blocks/reservation/reservation
            div.cards__item
                include ../../blocks/login/login
            div.cards__item
                +calendar
            div.cards__item
                include ../../blocks/room-card/room-card
                -
                    var obj = {
                        images: ['../../../assets/images/room.png', '../../../assets/images/room.png', '../../../assets/images/room.png', '../../../assets/images/room.png'],
                        number: '888',
                        type: 'люкс',
                        cost: '9 990₽',
                        rating: 5,
                        reviews: 145,
                        uniqueID:'qwe'
                    }
                +room-card(obj)
                -
                    var obj = {
                        images: ['../../../assets/images/room.png', '../../../assets/images/room.png', '../../../assets/images/room.png', '../../../assets/images/room.png'],
                        number: '56',
                        type: '',
