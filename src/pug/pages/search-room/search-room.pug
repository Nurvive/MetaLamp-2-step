                        .search-room__dropdown-layout
                            p Гости
                            +dropdown('search-room__dropdown', 'default')
                    li.search-room__item(data-move="no")
                        .search-room__slider-layout диапазон цены
                        +range-slider
                        span.search-room__item-extra-text Стоимость за сутки пребывания в номере
                    li.search-room__item
                        .search-room__layout правила дома
                            +checkbox-buttons(['Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)'])
                    li.search-room__item.search-room__item_small-margin
                        .search-room__layout доступность
                        +rich-checkbox-buttons({
                            'Широкий коридор': 'Ширина коридоров в номере не менее 91 см.',
                            'Помощник для инвалидов': 'На 1 этаже вас встретит специалист и проводит до номера.'
                        })

                    li.search-room__item
                        .search-room__dropdown-layout удобства номера
                        +dropdown('search-room__dropdown', 'rooms')
                    li.search-room__item
                        .search-room__layout
                            +expandable-checkbox({
                                text: 'Дополнительные удобства',
