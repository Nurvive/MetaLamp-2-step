include dropdown-item/dropdown-item
include ../button/button

mixin dropdown({type = 'default', title = 'Гости', wordsArray = [], withButtons = false, placeholder = ''} = {})
    -
        const className = 'dropdown-' + type
    div.dropdown.js-dropdown(class=className class='js-' + className)
        .dropdown__input-wrapper.js-dropdown__input-wrapper
            p.dropdown__input-wrapper-title= title
            span.dropdown__open-button
            input.dropdown__input.js-dropdown__input(placeholder=placeholder type=type readonly=true)
        ul.dropdown__list.js-dropdown__list
            .dropdown__dropdown-item-wrapper.js-dropdown__dropdown-item-wrapper
                +dropdown-item(wordsArray)
            if withButtons
                li.dropdown__interactive
                    .js-dropdown__interactive-clear.dropdown__interactive-clear
                        +button({text: 'очистить', type: 'withText'})
                    .js-dropdown__interactive-confirm.dropdown__interactive-confirm
                        +button({text: 'применить', type: 'withText'})
