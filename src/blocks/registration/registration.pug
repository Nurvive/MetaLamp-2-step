include ../button/button
include ../masked-text-field/masked-text-field
include ../radio-buttons/radio-buttons
include ../text-field/text-field
include ../toggle/toggle

mixin registration
    form(action='/mock-address/change-me').registration.js-registration
        .registration__layout
            p.registration__layout-text.registration__layout-text_big Регистрация аккаунта
            .registration__input-wrapper
                +text-field({placeholder: 'Имя'})
            .registration__input-wrapper
                +text-field({placeholder: 'Фамилия'})
            +radio-buttons(['Мужчина', "Женщина"])
        .registration__layout.js-registration__layout-masked-text-field
            p.registration__layout-text дата рождения
            +masked-text-field
        .registration__layout
            p.registration__layout-text данные для входа в сервис
            .registration__input-wrapper
                +text-field({placeholder: 'Email', type: 'email'})
            .registration__input-wrapper
                +text-field({placeholder: 'Пароль', type: 'password'})
            - const toggleOptions = [{isChecked: false, text: 'Получать спецпредложения'}]
            each option in toggleOptions
                +toggle(option)
        +button({text: 'Зарегистрироваться', size: 'long', withArrow: true, htmlType: 'link', href: 'registration.html'})
        .registration__bottom
            p.registration__bottom-text Уже есть аккаунт на Toxin
            +button({text: 'Войти', size: 'default', type: 'transparent', htmlType: 'link', href: 'sign-in.html'})

