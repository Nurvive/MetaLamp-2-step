mixin button({text = 'click me', size = '', type = '', withArrow = false, height = '', htmlType = 'button'} = {})
    -
        const sizeModifiers = {
            long: 'button_size_long'
        }
        const typeModifiers = {
            transparent: 'button_type_transparent',
            withText: 'button_type_with-text'
        }
        const heightModifiers = {
            flat: 'button_case_flat'
        }
        const classes = [
            'button',
            sizeModifiers[size],
            typeModifiers[type],
            heightModifiers[height]
        ]
    button(class=classes, type=htmlType)= text
        if (withArrow)
            span.button__arrow
